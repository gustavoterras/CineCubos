<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.cubos.cinemacubos">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".root.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.br.com.cubos.cinemacubos.features.splash.splash.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.details.DetailsActivity" />
        <activity
            android:name=".ui.error.ErrorActivity"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:theme="@style/AppTheme.Transparent" />
    </application>

</manifest>